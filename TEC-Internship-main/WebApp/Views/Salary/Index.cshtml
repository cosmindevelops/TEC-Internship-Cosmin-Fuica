@model IEnumerable<WebApp.Models.SalaryWithFullNameDto>

@{
    ViewData["Title"] = "Salaries";
}

<link rel="stylesheet" href="~/css/salary.css">

<div class="container mt-5">
    <h2 class="text-center">Salaries</h2>
    <form method="post">
        @Html.AntiForgeryToken()
        <table class="table table-striped table-hover custom-table">
            <thead class="thead-dark">
                <tr>
                    <th>Full Name</th>
                    <th class="salary-title" style="padding-left:50px;">Salary</th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var salary in Model)
                {
                    <tr>
                        <td>@salary.FullName</td>
                        <td>
                            <span class="salary-amount" id="salary-amount-@salary.PersonId">@salary.Amount</span>
                            <input type="number" class="form-control salary-input" id="salary-input-@salary.PersonId" value="@salary.Amount" max="999999999" />
                        </td>
                        <td class="icon-cell text-right">
                            <a href="javascript:void(0);" class="edit-icon" data-person-id="@salary.PersonId" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="javascript:void(0);" class="save-icon" data-person-id="@salary.PersonId" style="display: none;" title="Save">
                                <i class="fas fa-save"></i>
                            </a>
                            <a href="javascript:void(0);" class="cancel-icon" data-person-id="@salary.PersonId" style="display: none;" title="Cancel">
                                <i class="fas fa-times"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>

@section Scripts {
    <script src="~/js/salary.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        toastr.options = {
            "positionClass": "toast-bottom-right",
            "timeOut": "2000",
            "closeButton": true,
            "showDuration": "300",
            "hideDuration": "1000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>
}